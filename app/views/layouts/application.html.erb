<!DOCTYPE html>
<html>
  <head>
    <title>Program Bug Tracker</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="top-bar">
      <div class="title">
        <h1>Program Bug Tracker</h1>
      </div>
      <div class="user-options">
        <% if user_signed_in? %>
          <div class="user-option"><%= link_to "Log Out", destroy_user_session_path %></div>
          <div class="user-option"><%= link_to "Edit Settings", edit_user_registration_path %></div>
        <% else %>
          <div class="user-option"><%= link_to "Sign In", new_user_session_path %></div>
          <div class="user-option"><%= link_to "Create Account", new_user_registration_path %></div>
        <% end %>
        <div class="user-option"><%= link_to "Home", root_path %></div>
      </div>
      
    </div>
    <%= yield %>
  </body>
</html>
